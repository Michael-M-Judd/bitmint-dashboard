{
  "name": "bitmint-dashboard",
  "version": "1.0.0",
  "description": "App dashboard to control the bitmint bot",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "pm2 start ./src/server.js --no-daemon --watch",
    "dev": "nodemon ./src/server.js",
    "dev:build": "docker build -t bitmint-express .",
    "dev:run": "docker run -p 9000:8080 -d --name bitmint-express bitmint-express",
    "dev:logs": "docker logs -f bitmint-express"
  },
  "keywords": [
    "bitmint"
  ],
  "author": "Michael Judd",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "ccxt": "^1.17.10",
    "concurrently": "^3.6.0",
    "express": "^4.16.3",
    "firebase": "^5.3.0",
    "mongoose": "^5.2.4",
    "node-fetch": "^2.2.0",
    "pm2": "^3.2.4",
    "react-redux-firebase": "^2.1.6"
  },
  "devDependencies": {
    "nodemon": "^1.18.3"
  }
}
